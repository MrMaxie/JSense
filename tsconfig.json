{
  "compilerOptions": {
      "target": "esnext",
      "jsx": "react-jsx",
      "jsxImportSource": "react",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "useDefineForClassFields": true,
      "paths": {
          "~/*": ["./src/*"]
      },
      "allowJs": false
  },
  "include": [
      "./make.ts",
      "./src",
      "./spec",
      "./makelib",
      "./shims/*.tsx",
      "./shims/*.d.ts"
  ]
}
